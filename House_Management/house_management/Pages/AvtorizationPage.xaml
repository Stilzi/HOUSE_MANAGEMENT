<Page x:Class="house_management.Pages.AvtorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:house_management.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="900"
      Title="AvtorizationPage">

    <Grid>
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="D:\проекты\House_MAnagement\images\domd7.jpg"/>
            </Grid.Background>
            <Grid Background="Black" 
              Opacity="0.8"/>
        </Grid>
        <Button   Height="30"
                  Width="200" 
                  Content="Войти" 
                  x:Name="Avtorizationbtn"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Bottom"
                  Margin="0 0 0 120" Click="Avtorizationbtn_Click"/>
        <TextBlock Text="Вход"
                       FontSize="50"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0 20 0 0"/>
        <StackPanel HorizontalAlignment="Center" 
                    Height="300"
                    Width="600">
            <TextBlock   Text="Email"
                         FontSize="30"
                         Foreground="White"
                         HorizontalAlignment="Center"/>
            <TextBox     x:Name="txbEmail"
                         Height="40"
                         Width="300"
                         FontSize="24"
                         Opacity="10"
                         Foreground="White"
                         Margin="20"/>
            <TextBlock   Text="Пароль"
                         FontSize="30"
                         Foreground="White"
                         HorizontalAlignment="Center"/>
            <PasswordBox x:Name="txbPassword"
                         Height="40"
                         Width="300"
                         FontSize="24"
                         Opacity="10"
                         Foreground="White"
                         Margin="20"/>
        </StackPanel>
    </Grid>
</Page>
